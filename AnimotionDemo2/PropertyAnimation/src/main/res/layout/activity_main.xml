<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <ImageView
            android:id="@+id/img_icon_a"
            style="@style/MyImgStyle"
            android:src="@mipmap/icon1"
            />
    <ImageView
            android:id="@+id/img_icon_b"
            style="@style/MyImgStyle"
            android:src="@mipmap/icon2"
            />
    <ImageView
            android:id="@+id/img_icon_c"
            style="@style/MyImgStyle"
            android:src="@mipmap/icon3"
            />
    <ImageView
            android:id="@+id/img_icon_d"
            style="@style/MyImgStyle"
            android:src="@mipmap/icon4"
            />
    <ImageView
            android:id="@+id/img_icon_e"
            style="@style/MyImgStyle"
            android:src="@mipmap/icon5"
            />
    <ImageView
            android:id="@+id/img_icon_f"
            style="@style/MyImgStyle"
            android:src="@mipmap/icon6"
            />
    <ImageView
            android:id="@+id/img_icon_end"
            style="@style/MyImgStyle"
            android:src="@mipmap/icon0"
            android:onClick="imgEnd"
            />
    <ImageView
            android:id="@+id/img_icon_start"
            style="@style/MyImgStyle"
            android:src="@mipmap/icon"
            android:onClick="imgStart"
            />

</RelativeLayout>
